<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.navigationuiexample.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_bookmarks"
            app:destination="@id/bookmarks" />
        <action
            android:id="@+id/action_homeFragment_to_settings"
            app:destination="@id/settings" />
        <action
            android:id="@+id/action_homeFragment_to_categories"
            app:destination="@id/categories" />
        <action
            android:id="@+id/action_homeFragment_to_premiumActivity"
            app:destination="@id/premiumActivity" />
    </fragment>
    <fragment
        android:id="@+id/categories"
        android:name="com.example.navigationuiexample.fragments.Categories"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/bookmarks"
        android:name="com.example.navigationuiexample.fragments.Bookmarks"
        android:label="fragment_bookmarks"
        tools:layout="@layout/fragment_bookmarks" />
    <fragment
        android:id="@+id/settings"
        android:name="com.example.navigationuiexample.fragments.Settings"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <activity
        android:id="@+id/premiumActivity"
        android:name="com.example.navigationuiexample.activities.PremiumActivity"
        android:label="activity_premium"
        tools:layout="@layout/activity_premium" />

</navigation>